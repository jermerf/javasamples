<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="312.0" prefWidth="449.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TextArea fx:id="txtContent" prefHeight="252.0" prefWidth="449.0" wrapText="true" />
      <GridPane alignment="center" hgap="10" prefHeight="54.0" prefWidth="449.0" vgap="10">
         <children>
            <Button mnemonicParsing="false" onAction="#newClicked" text="New" />
            <Button mnemonicParsing="false" onAction="#openClicked" text="Open" GridPane.columnIndex="1" />
            <Button mnemonicParsing="false" onAction="#saveClicked" text="Save" GridPane.columnIndex="2" />
            <Button mnemonicParsing="false" onAction="#saveAsClicked" text="Save As" GridPane.columnIndex="3" />
         </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </children>
</VBox>

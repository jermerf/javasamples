<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="267.0" prefWidth="285.0" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Button mnemonicParsing="false" onAction="#connectToMySql" text="Connect to MySQL" />
      <Button mnemonicParsing="false" onAction="#connectToSqlServerExpress" text="Connect to MSSQL" GridPane.columnIndex="1" />
      <Button mnemonicParsing="false" onAction="#getStudents" text="Get Students" GridPane.rowIndex="2" />
      <Button mnemonicParsing="false" onAction="#createStudent" text="Add Student" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <TextField fx:id="txtName" promptText="name" GridPane.rowIndex="3" />
      <TextField fx:id="txtAge" promptText="age" GridPane.rowIndex="4" />
      <TextField fx:id="txtAnimal" promptText="animal" GridPane.rowIndex="5" />
      <TextField fx:id="txtBallance" promptText="ballance" GridPane.rowIndex="6" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
